    <body>
         <div class="container p-5">
            <h1 class="text-center">Write a Post</h1>
            <form method="post">
              <div class="form-group">
                  <label for="exampleInputTitle">Title</label>
                  <input name="title" type="text" class="form-control" id="exampleInputTitle" aria-describedby="emailHelp" placeholder="Enter title of post">
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1">Image</label>
                  <input name="file" type="file" class="form-control" id="image_input" placeholder="Image"  accept="image/png, image/jpeg, image/jpg">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Write about blog</label>
                    <textarea name="about" class="form-control" id="exampleFormControlTextarea1" rows="4"></textarea>
                  </div>
                <button type="button" class="btn btn-primary" onclick="submitForm()">Publish</button>
              </form>

         </div>
       


    </body>
    <script src="/js/share.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    
    <script>
         document.getElementById("image_input").onchange = async function(event) {
          var files= document.getElementById("image_input").files;
            const data = new FormData();
            data.append('file',files[0]);
            data.append('upload_preset','teacher_image');

            const res = await fetch("https://api.cloudinary.com/v1_1/apni-coaching/image/upload",{
              method:"POST",
              body:data
            })
            const file = await res.json();
            localStorage.setItem("image_url" ,  file.secure_url);
            }

    </script>
    
